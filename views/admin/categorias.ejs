<%- include('header') %>

<h2 class="gray">Admin Categorias:
    <a href="/admin/categorias/nova">Nova</a> |
    <a href="/admin/">Voltar</a>
</h2>

<div class="lista"> 
    <ul class="list-group"> 
        <% categorias.forEach( categoria => { %> 
            <li class="list-group-item list-group-item-action flex-column align-items-start">
                <%- categoria.categoria %> | 
                <a href="/admin/categorias/delete/<%- categoria.id %>">
                    Excluir
                </a> |
                <a href="/admin/categorias/editar/<%- categoria.id %>">
                    Editar
                </a>
            </li>
        <%} )%>
    </ul>    
</div> 

<%- include('footer') %>